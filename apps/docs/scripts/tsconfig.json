{
  "compilerOptions": {
    "target": "esnext",
    "noEmit": true,
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "paths": {
      "@/*": ["../src/*"]
    }
  },
  "include": [
    "./**/*.ts",
    "../src/utils/slug.ts",
    "../src/utils/strings.ts",
    "../src/app/(main)/(markdown)/blog/data.ts"
  ],
  "exclude": ["node_modules"]
}
