{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "composite": false,
    "skipLibCheck": true,
    "target": "esnext",
    "rootDir": "src",
    "baseUrl": "src",
    "isolatedModules": true,
    "paths": {
      "@react-md/*": [
        "../*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src"
  ],
  "exclude": [
    "src/server",
    "**/__tests__"
  ]
}
