{
  "name": "@react-md/core",
  "version": "6.0.0-alpha.0",
  "description": "The core components and functionality for react-md.",
  "type": "module",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "sass": "./dist/_core.scss",
      "default": "./esm/index.js"
    },
    "./test-utils": "./esm/test-utils",
    "./test-utils/*": "./esm/test-utils/*"
  },
  "sideEffects": [
    "dist/**/*",
    "test-utils/polyfills"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel build-esm-watch build-scss-watch build-types-watch",
    "build": "npm-run-all build-esm build-scss build-types",
    "build-esm": "swc src -d ./esm",
    "build-esm-watch": "pnpm run build-esm --watch",
    "build-types": "tsc -P tsconfig.types.json",
    "build-types-watch": "pnpm run build-types --watch",
    "build-scss": "node scripts/copySassFiles.js",
    "build-scss-watch": "pnpm run build-scss --watch",
    "clean": "rm -rf .turbo esm dist node_modules",
    "typecheck": "tsc --noEmit",
    "lint-scripts": "eslint \"src/**/*.{ts,tsx,js,jsx,cjs,mjs}\"",
    "lint-styles": "stylelint \"src/**/*.{css,scss}\"",
    "lint": "npm-run-all lint-scripts lint-styles",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "homepage": "https://react-md.dev",
  "keywords": [
    "react",
    "material design",
    "react-md",
    "components",
    "ui",
    "library"
  ],
  "license": "MIT",
  "dependencies": {
    "cnbuilder": "^3.1.0",
    "nanoid": "^4.0.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.2",
    "@jest/types": "^29.6.1",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.71",
    "@swc/jest": "^0.2.27",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.196",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.17",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "chokidar": "^3.5.3",
    "filesize": "^10.0.8",
    "glob": "10.3.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-watch-typeahead": "^2.2.2",
    "lodash": "^4.17.21",
    "lz-string": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.27",
    "postcss-scss": "^4.0.6",
    "stylelint": "^15.10.2",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-recommended-scss": "^12.0.0",
    "stylelint-order": "^6.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "@jest/globals": "^29.6.1",
    "@jest/types": "^29.6.1",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/testing-library__jest-dom": "^5.14.8",
    "react": ">= 18",
    "react-dom": ">= 18"
  },
  "peerDependenciesMeta": {
    "@jest/globals": {
      "optional": true
    },
    "@jest/types": {
      "optional": true
    },
    "@testing-library/dom": {
      "optional": true
    },
    "@testing-library/jest-dom": {
      "optional": true
    },
    "@testing-library/react": {
      "optional": true
    },
    "@testing-library/user-event": {
      "optional": true
    },
    "@types/testing-library__jest-dom": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
