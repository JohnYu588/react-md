{
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true
    }
  },
  "ignoreChanges": [
    "**/__tests__/**",
    "**/*.md"
  ],
  "changelogPreset": {
    "name": "./packages/dev-utils/changelog.config.js"
  },
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "2.5.5"
}
