{
  "name": "project-root",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "TURBO_TELEMETRY_DISABLED=1 turbo run build",
    "build-code": "pnpm --filter code build",
    "build-core": "pnpm --filter core build",
    "build-docs": "pnpm --filter docs build",
    "build-docs-generator": "pnpm --filter docs-generator build",
    "build-sassdoc": "pnpm --filter sassdoc-generator build",
    "build-packages": "TURBO_TELEMETRY_DISABLED=1 turbo run build --filter=docs^...",
    "update-sassdoc": "pnpm --filter docs sassdoc",
    "update-material-icons": "pnpm --filter material-icons update-icons",
    "code-dev": "pnpm --filter code dev",
    "core-dev": "pnpm --filter core dev",
    "docs-dev": "pnpm --filter docs dev",
    "docs-generator-dev": "pnpm --filter docs-generator dev",
    "sassdoc-dev": "pnpm --filter docs-generator dev",
    "dev": "TURBO_TELEMETRY_DISABLED=1 turbo run dev --no-cache --continue",
    "lint": "TURBO_TELEMETRY_DISABLED=1 turbo run lint",
    "clean": "TURBO_TELEMETRY_DISABLED=1 turbo run clean && pnpm clean-root",
    "clean-dist": "TURBO_TELEMETRY_DISABLED=1 turbo run clean-dist",
    "clean-root": "rm -rf .turbo coverage node_modules",
    "test": "TURBO_TELEMETRY_DISABLED=1 turbo run test",
    "test-coverage": "TURBO_TELEMETRY_DISABLED=1 turbo run test -- --coverage",
    "test-core": "pnpm --filter core test",
    "test-core-watch": "pnpm --filter core test --watch",
    "test-core-coverage": "pnpm --filter core test --coverage",
    "test-core-coverage-watch": "pnpm --filter core test --coverage --watch",
    "core-export-map": "pnpm --filter core export-map",
    "core-index-file": "pnpm --filter core create-index-file",
    "typecheck": "TURBO_TELEMETRY_DISABLED=1 turbo run typecheck",
    "validate": "pnpm run lint && pnpm run typecheck",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "changeset": "changeset",
    "run-script": "tsx --tsconfig scripts/tsconfig.json",
    "release": "pnpm run run-script scripts/release.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@inquirer/confirm": "^5.1.8",
    "@inquirer/input": "^4.1.8",
    "@inquirer/rawlist": "^4.0.11",
    "@octokit/core": "^6.1.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "tsx": "^4.19.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "engines": {
    "pnpm": ">=9",
    "node": ">=20"
  },
  "engineStrict": true,
  "packageManager": "pnpm@10.7.1",
  "lint-staged": {
    "**/*.{scss,js,jsx,md,yml,json,ts,tsx}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "22.13.1",
    "pnpm": "10.7.1"
  }
}
