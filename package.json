{
  "name": "project-root",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "build": "TURBO_TELEMETRY_DISABLED=1 turbo run build",
    "build-packages": "TURBO_TELEMETRY_DISABLED=1 turbo run build --filter=docs^...",
    "update-material-icons": "pnpm --filter material-icons update-icons",
    "core-dev": "pnpm --filter core dev",
    "docs-dev": "pnpm --filter docs dev",
    "dev": "TURBO_TELEMETRY_DISABLED=1 turbo run dev --no-cache --continue",
    "lint": "TURBO_TELEMETRY_DISABLED=1 turbo run lint",
    "clean": "TURBO_TELEMETRY_DISABLED=1 turbo run clean && pnpm clean-root",
    "clean-dist": "TURBO_TELEMETRY_DISABLED=1 turbo run clean-dist",
    "clean-root": "rm -rf .turbo coverage node_modules",
    "test": "TURBO_TELEMETRY_DISABLED=1 turbo run test",
    "test-core": "pnpm --filter core test --coverage",
    "test-core-watch": "pnpm --filter core test --coverage --watch",
    "typecheck": "TURBO_TELEMETRY_DISABLED=1 turbo run typecheck",
    "validate": "pnpm run lint && pnpm run typecheck",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "changeset": "changeset",
    "run-script": "tsx --tsconfig scripts/tsconfig.json",
    "release": "pnpm run run-script scripts/release.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "@inquirer/confirm": "^5.1.5",
    "@inquirer/input": "^4.1.5",
    "@inquirer/rawlist": "^4.0.8",
    "@octokit/core": "^6.1.3",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "dotenv": "^16.4.7",
    "eslint": "^9.20.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.5.0",
    "tsx": "^4.19.2",
    "turbo": "^2.4.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "pnpm": ">=9",
    "node": ">=20"
  },
  "engineStrict": true,
  "packageManager": "pnpm@10.2.1",
  "lint-staged": {
    "**/*.{scss,js,jsx,md,yml,json,ts,tsx}": [
      "prettier --write"
    ]
  },
  "volta": {
    "node": "22.13.1",
    "pnpm": "10.2.1"
  }
}
