{
  "name": "react-md-monorepo",
  "type": "module",
  "private": true,
  "version": "1.0.0",
  "description": "The monorepo for react-md",
  "scripts": {
    "prepare": "husky install",
    "cli": "ts-node -P scripts/tsconfig.json",
    "test": "jest",
    "build-ejs": "swc src -d ejs",
    "lint-scripts": "eslint \"**/*.{ts,tsx,js,jsx,cjs,mjs}\"",
    "lint-styles": "stylelint \"**/*.{css,scss}\"",
    "lint": "pnpm run lint-scripts && pnpm run lint-styles",
    "typecheck-core": "tsc --noEmit --project packages/core/tsconfig.json",
    "typecheck-main": "tsc --noEmit",
    "typecheck-scripts": "tsc --noEmit --project scripts/tsconfig.json",
    "typecheck": "npm-run-all typecheck-core typecheck-main typecheck-scripts",
    "format": "prettier --write .",
    "prismjs-themes": "pnpm run cli scripts/prismThemes.ts",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "build-static": "next build && next export"
  },
  "engines": {
    "pnpm": ">=7",
    "node": ">=16"
  },
  "engineStrict": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git"
  },
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "homepage": "https://react-md.dev",
  "dependencies": {
    "cnbuilder": "^3.1.0",
    "filesize": "^10.0.6",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "next": "^13.2.3",
    "pretty-ms": "^8.0.0",
    "prismjs": "^1.29.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-marked-renderer": "^1.1.2",
    "react-window": "^1.8.8"
  },
  "devDependencies": {
    "@jest/types": "^29.5.0",
    "@mapbox/rehype-prism": "^0.8.0",
    "@mdx-js/loader": "^2.3.0",
    "@mdx-js/react": "^2.3.0",
    "@mlaursen/eslint-config": "^2.2.0",
    "@next/mdx": "^13.2.3",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.38",
    "@swc/jest": "^0.2.24",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.3",
    "@types/jest": "^29.4.0",
    "@types/js-cookie": "^3.0.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.15.0",
    "@types/prismjs": "^1.26.0",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/react-window": "^1.8.5",
    "@types/testing-library__jest-dom": "^5.14.5",
    "browserslist": "^4.21.5",
    "commander": "^10.0.0",
    "eslint": "^8.35.0",
    "eslint-config-next": "^13.2.3",
    "eslint-plugin-next": "^0.0.0",
    "glob": "^9.2.1",
    "husky": "^8.0.3",
    "identity-obj-proxy": "^3.0.0",
    "inquirer": "^9.1.4",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jest-watch-typeahead": "^2.2.2",
    "lint-staged": "^13.1.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "prettier": "^2.8.4",
    "prism-themes": "^1.9.0",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-recommended-scss": "^9.0.1",
    "stylelint-order": "^6.0.3",
    "svgo": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "unist-util-visit": "^4.1.2",
    "webpack": "^5.76.0"
  },
  "lint-staged": {
    "**/*.{scss,js,jsx,md,yml,json,ts,tsx}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
