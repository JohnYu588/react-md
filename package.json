{
  "name": "react-md",
  "type": "module",
  "private": true,
  "version": "2.4.0",
  "description": "The mono-repo for react-md",
  "scripts": {
    "prepare": "husky install",
    "run-script": "TS_NODE_PROJECT=\"./scripts/tsconfig.json\" node --loader ts-node/esm/transpile-only",
    "clean": "yarn run-script scripts/clean.ts",
    "build": "yarn run-script scripts/build.ts",
    "typecheck": "tsc -p tsconfig.check.json",
    "lint-scripts": "eslint \"packages/*/src/**/*.{ts,tsx,js,jsx}\"",
    "lint-styles": "stylelint \"packages/*/src/**/*.scss\"",
    "lint": "npm-run-all lint-scripts lint-styles typecheck",
    "test": "jest",
    "format": "prettier --write \"**/*.{ts,tsx,scss,js,jsx,md,yml,json}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mlaursen/react-md.git"
  },
  "author": "Mikkel Laursen <mlaursen03@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mlaursen/react-md/issues"
  },
  "homepage": "https://react-md.dev",
  "devDependencies": {
    "@babel/plugin-transform-typescript": "^7.16.1",
    "@mlaursen/eslint-config": "^1.2.0",
    "@swc/cli": "^0.1.52",
    "@swc/core": "^1.2.112",
    "@testing-library/dom": "^8.11.1",
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.1",
    "@testing-library/user-event": "13.5.0",
    "@types/fs-extra": "^9.0.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.0",
    "@types/lodash": "^4.14.178",
    "@types/node": "^17.0.13",
    "@types/prettier": "^2.4.3",
    "@types/reach__router": "^1.3.10",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-test-renderer": "^17.0.1",
    "browserslist": "^4.18.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.8.0",
    "gzip-size": "^7.0.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.1",
    "react-test-renderer": "^17.0.2",
    "stylelint": "^14.3.0",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*.{ts,tsx,scss,js,jsx,md,yml,json}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
