{
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "build": "turbo run build",
    "build-packages": "turbo run build --filter=docs^...",
    "dev": "turbo run dev --no-cache --continue",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean-dist": "turbo run clean-dist",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "validate": "pnpm run lint && pnpm run typecheck",
    "format": "prettier --write .",
    "changeset": "changeset",
    "run-script": "ts-node -P scripts/tsconfig.json",
    "release": "pnpm run run-script scripts/release.ts"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@inquirer/confirm": "^2.0.15",
    "@inquirer/input": "^1.2.14",
    "@inquirer/rawlist": "^1.2.14",
    "@mlaursen/eslint-config": "^4.0.0",
    "@octokit/core": "^5.1.0",
    "dotenv": "^16.4.1",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "turbo": "^1.11.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "pnpm": ">=8",
    "node": "^18"
  },
  "engineStrict": true,
  "lint-staged": {
    "**/*.{scss,js,jsx,md,yml,json,ts,tsx}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@8.0.0"
}
