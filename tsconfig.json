{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "paths": {
      "@react-md/app-bar": ["packages/app-bar/src/index.ts"],
      "@react-md/avatar": ["packages/avatar/src/index.ts"],
      "@react-md/button": ["packages/button/src/index.ts"],
      "@react-md/core": ["packages/core/src/index.ts"],
      "@react-md/dialog": ["packages/dialog/src/index.ts"],
      "@react-md/divider": ["packages/divider/src/index.ts"],
      "@react-md/icon": ["packages/icon/src/index.ts"],
      "@react-md/link": ["packages/link/src/index.ts"],
      "@react-md/progress": ["packages/progress/src/index.ts"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "prev"]
}
